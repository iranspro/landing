# IransPro Environment Variables
# Copy this file to .env.local and fill in your values

# ═══════════════════════════════════════
# Database
# ═══════════════════════════════════════
DATABASE_URL="postgresql://admin:your_password@localhost:5432/iranspro"
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_password
POSTGRES_PORT=5432

# ═══════════════════════════════════════
# PasarGuard VPN Panel
# ═══════════════════════════════════════
PASARGUARD_URL="http://localhost:8000"
PASARGUARD_USERNAME="admin"
PASARGUARD_PASSWORD="admin"
PASARGUARD_PORT=8000

# ═══════════════════════════════════════
# Email Configuration (Titan Email)
# ═══════════════════════════════════════
SMTP_HOST="smtp.titan.email"
SMTP_PORT=587
SMTP_USER="your-email@yourdomain.com"
SMTP_PASS="your-password"
EMAIL_FROM="IransPro <noreply@yourdomain.com>"

# ═══════════════════════════════════════
# Security
# ═══════════════════════════════════════
# Generate a strong random string for OTP_MASTER_SECRET
# Example: openssl rand -base64 32
OTP_MASTER_SECRET="your-super-secret-random-256-bit-key-here"

# Generate a strong JWT secret
# Example: openssl rand -base64 64
JWT_SECRET="your-jwt-secret-key-here"

# ═══════════════════════════════════════
# Application
# ═══════════════════════════════════════
NEXT_PUBLIC_APP_URL="https://irans.pro"
NODE_ENV="production"

# ═══════════════════════════════════════
# Telegram Bot (Notifications)
# ═══════════════════════════════════════
TELEGRAM_BOT_TOKEN="your-bot-token-from-botfather"
TELEGRAM_CHAT_ID="your-channel-or-group-id"

# ═══════════════════════════════════════
# Optional: Rate Limiting
# ═══════════════════════════════════════
MAX_OTP_REQUESTS_PER_HOUR=3
OTP_COOLDOWN_SECONDS=30
